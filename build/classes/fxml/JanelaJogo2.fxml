        <rowConstraints>
          <RowConstraints maxHeight="246.0" minHeight="10.0" prefHeight="39.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="363.0" minHeight="10.0" prefHeight="363.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button mnemonicParsing="false" onAction="#setAnswer" prefHeight="76.0" prefWidth="624.0" text="ESCOLHA A SEQUENCIA" GridPane.rowIndex="2" />
         </children>
      </GridPane>
   </right>
